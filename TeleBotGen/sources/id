          bot_retor+="Fecha de Corte : $i \n"
          bot_retor+="Si tienes dudas, contacta con: \n  $(cat < /etc/ADM-db/resell)\n"
          bot_retor+="$LINE\n"
msj_add ${idlog}
}
done
          bot_retor="  âœ¨ ğ™±ğš’ğšğš—ğšŸğšğš—ğš’ğšğš˜  nuevamente ğšŠğš•  BOTGEN.\n"
          bot_retor+="El Administrador  $(cat < /etc/ADM-db/resell)  te autorizÃ³.\n"
